<Alloy>
	<Window class="container">
		<View backgroundImage="/images/splashnologo.png" >
			
			<ScrollView class="lv" scrollType="vertical"  layout="vertical"   top="70" >
				<ImageView id="imgNews" image="/img/camera.png" onClick="openOption" ></ImageView>
				<Label id="lblLogo" > </Label>
				<TextField id="txtTitle" hintText="اسم المحل "></TextField>
				<TextField id="txtPrice" hintText="التليفون " keyboardType="Titanium.UI.KEYBOARD_TYPE_PHONE_PAD"></TextField>
				<TextField id="txtAddress" hintText=" العنوان  "></TextField>
				<TextArea id="txtDesc" hintText=" تفاصيل المحل "></TextArea>
				
			<View height="Titanium.UI.SIZE" width="90%" top="10">
						<ImageView image="/images/ic-down-menu.png" right="5"></ImageView>
						<Label className="null" id="lblCity" onClick="getCountry" objName=" اختر البلد" text=" اختر البلد" class="lblAdd" backgroundColor="#ffffff"> </Label>
						<View class="vl" height="1" backgroundColor="#E0E0E0"></View>
			</View>
			
			<View height="Titanium.UI.SIZE" width="90%" top="10">
						<ImageView image="/images/ic-down-menu.png" right="5"></ImageView>
						<Label  id="lblArea" onClick="getCity" objName=" اختر المدينة" text=" اختر المدينة" class="lblAdd" backgroundColor="#ffffff"> </Label>
						<View class="vl" height="1" backgroundColor="#E0E0E0"></View>
			</View>
			
			<View height="Titanium.UI.SIZE" width="90%" top="10">
						<ImageView image="/images/ic-down-menu.png" right="5"></ImageView>
						<Label className="null" id="lblCategory" onClick="getCategory" objName=" اختر القسم" text=" اختر القسم" backgroundColor="#ffffff"> </Label>
						<View class="vl" height="1" backgroundColor="#E0E0E0"></View>
			</View>
			<!--	<TableView id="tbl" onClick="setCat" backgroundColor="red"></TableView>-->
			<View top="15"  height="120">
				<Button id="btnAdd" title="اضافة" width="60%" onClick="reg" top="10" backgroundColor="#4abfe8" borderColor="#4abfe8"></Button>
				<OptionDialog id="options"  onClick="optionDialogClicked" />
			</View>
		</ScrollView>
		
		</View>
	</Window>
</Alloy>